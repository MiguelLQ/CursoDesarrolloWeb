﻿<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Ecommerce</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

﻿﻿<AuthorizeView Roles="Administrador">
    <Authorized>
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Rounded.Home">Home</MudNavLink>
            <MudDivider />
            <MudNavLink Href="/usuarios" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Person2">Usuarios</MudNavLink>
            <MudDivider />
            <MudNavLink Href="/productos" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.ProductionQuantityLimits">Productos</MudNavLink>
            <MudDivider />
            <MudNavLink Href="/categorias" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Category">Categorias</MudNavLink>
            <MudDivider />
            <MudNavLink Href="/dashboard" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
            <MudDivider />
            <MudNavLink Href="/ventas" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.ShoppingBag">Pedidos</MudNavLink>
        </MudNavMenu>
    </Authorized>
</AuthorizeView>
<AuthorizeView Roles="Usuario">
    <Authorized>
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Rounded.Home">Inicio</MudNavLink>
            <MudDivider />
            <MudNavLink Href="/pedidos" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.ShoppingBag">Mis Pedidos</MudNavLink>
        </MudNavMenu>
    </Authorized>
</AuthorizeView>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}